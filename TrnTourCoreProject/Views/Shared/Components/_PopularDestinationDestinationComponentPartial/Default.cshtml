@using EntityLayer.Concrete
@model List<Destination>
<section class="grids-1 py-5">
    <div class="grids py-lg-5 py-md-4">
        <div class="container">
            <h3 class="hny-title mb-5">Tur Rotalarımız</h3>
            <div class="row">
                @foreach (var item in Model)
                {
                    <div class="col-lg-4 col-md-4 col-6 mb-4">
                        <div class="column">
                            <a href="#">
                                <img src="@item.ImageUrl" alt="" style="width:370px; height:300px" class="img-fluid">
                            </a>
                            <div class="info">
                                <h4><a href="#">@item.City</a></h4>
                                <p>@item.DayNight</p>
                                <div class="dst-btm">
                                    <h6 class="">Başlayan fiyatlar</h6>
                                    <span>@item.Price ₺</span>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>